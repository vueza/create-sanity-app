{
  "$schema": "https://biomejs.dev/schemas/2.2.3/schema.json",
  "root": true,
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.turbo",
      "!**/.next",
      "!**/next-env.d.ts",
      "!**/tsconfig.tsbuildinfo",
      "!**/pnpm-lock.yaml",
      "!**/storybook-static",
      "!**/coverage",
      "!**/dist",
      "!**/.sanity",
      "!**/sanity.types.ts",
      "!**/app.css"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true
  },
  "linter": {
    "enabled": true,
    "domains": {
      "next": "all",
      "react": "all",
      "test": "all",
      "project": "all"
    },
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredDependencies": "off",
        "useImportExtensions": "off"
      },
      "suspicious": {
        "noReactSpecificProps": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {
            "attributes": ["className"],
            "functions": ["twMerge", "tv"]
          }
        }
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "**/*.config.mjs",
        "**/*.config.mts",
        "**/*.config.ts",
        "**/config.ts",
        "**/*.cli.ts",
        "**/apps/web/src/app/**",
        "**/packages/migration/migrations/**"
      ],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          }
        }
      }
    },
    {
      "includes": ["**/apps/docs/**"],
      "linter": {
        "rules": {
          "style": {
            "noDefaultExport": "off"
          },
          "correctness": {
            "noNodejsModules": "off"
          },
          "performance": {
            "noNamespaceImport": "off"
          }
        }
      }
    },
    {
      "includes": ["**/env.ts", "**/*.config.mts"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    }
  ]
}
